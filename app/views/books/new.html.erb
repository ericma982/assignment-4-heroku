<%= link_to("Back to list", books_path, :class => 'back-link') %>
<div class="books new">
    <h2>Create Book</h2>

    <%= form_for(@book, :url => books_path, :method => 'post') do |f| %>
    
    <table summary="Book form fields">
    <tr>
        <th>Title</th>
        <td><%= f.text_field :title %></td>
    </tr>
    <tr>
        <th>Author</th>
        <td><%= f.text_field :author %></td>
    </tr>
    <tr>
        <th>Genre</th>
        <td><%= f.select(:genre , ["fantasy", "historical fiction", "contemporary fiction", "mystery", "science fiction"]) %></td>
    </tr>
    <tr>
        <th>Price</th>
        <td><%= f.text_field :price %></td>
    </tr>
    <tr>
        <th>Published-Date</th>
        <td><%= f.datetime_field :published_date %></td>
    </tr>
    </table>
    
    <div class="form-buttons">
    <%= f.submit "Create Book" %>
    </div>

    <% end %>
</div>